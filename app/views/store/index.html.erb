<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1> <%= t('.title')%> </h1>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    
    <l> <%=product.description %></l>
     <div class="price_line">
      <span class="price"> <%= number_to_currency(product.price, :unit => " грн.", :format => "%n%u") %> </span> 
      <!--<span class="price"> <%= number_to_currency (product.price) %> </span >-->
     <m> <%= button_to  t('.add_to_cart'), line_items_path(product_id: product), remote: true %> </m> 
    </div>
  </div>
<% end %>

